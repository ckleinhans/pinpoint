<resources>
    <!-- Base application theme. -->
    <style name="Theme.Pinpoint" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorBackgroundFloating">@color/black</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>

        <!--color primary variant controls the color above the top bar -->
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/soft_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/TextAppearance.Pinpoint.Default</item>
    </style>
</resources>