<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/navbarMap">
    <fragment
        android:id="@+id/navbarMap"
        android:name="edu.wisc.ece.pinpoint.pages.map.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/navbarProfile"
        android:name="edu.wisc.ece.pinpoint.pages.profile.ProfilePageFragment"
        android:label="fragment_profile_page"
        tools:layout="@layout/fragment_profile_page" />
    <fragment
        android:id="@+id/navbarSearch"
        android:name="edu.wisc.ece.pinpoint.pages.pinList.pinListFragment"
        android:label="fragment_pin_list"
        tools:layout="@layout/fragment_pin_list" >
        <action
            android:id="@+id/action_navbarSearch_to_pinViewPage"
            app:destination="@id/pinViewPage" />
    </fragment>

    <fragment
        android:id="@+id/pinViewPage"
        android:name="edu.wisc.ece.pinpoint.pages.pinList.pinViewFragment"
        android:label="fragment_pin_view"
        tools:layout="@layout/fragment_pin_view" />
</navigation>