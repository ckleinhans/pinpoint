<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/navbarMap">
    <fragment
        android:id="@+id/navbarMap"
        android:name="edu.wisc.ece.pinpoint.pages.map.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/navbarProfile"
        android:name="edu.wisc.ece.pinpoint.pages.profile.ProfilePageFragment"
        android:label="fragment_profile_page"
        tools:layout="@layout/fragment_profile_page">
        <action
            android:id="@+id/editProfile"
            app:destination="@id/editProfileFragment" />
        <argument
            android:name="uid"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/settingsContainer"
            app:destination="@id/settingsContainerFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="edu.wisc.ece.pinpoint.pages.profile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <action
        android:id="@+id/map"
        app:destination="@id/navbarMap" />
    <action
        android:id="@+id/profile"
        app:destination="@id/navbarProfile" />
    <fragment
        android:id="@+id/settingsContainerFragment"
        android:name="edu.wisc.ece.pinpoint.pages.profile.SettingsContainerFragment"
        android:label="fragment_settings_container"
        tools:layout="@layout/fragment_settings_container" />
</navigation>